<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgApp1"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/appointment"
        app:civ_border_color="#3F51B5"
        app:civ_border_width="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/doctorNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Doctor Name"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imgApp1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="User Name"
        android:textStyle="italic"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/doctorNameTextView"
        app:layout_constraintStart_toEndOf="@+id/imgApp1" />

    <TextView
        android:id="@+id/appointmentDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:text="Appointment Date"
        android:textStyle="italic"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/userNameTextView"
        app:layout_constraintStart_toEndOf="@+id/imgApp1" />
    <TextView
        android:id="@+id/appointmentTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Appointment Type"
        android:textStyle="italic"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/appointmentDateTextView"
        app:layout_constraintStart_toEndOf="@+id/imgApp1" />
    <TextView
        android:id="@+id/currentTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Current Time"
        android:textStyle="italic"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/appointmentTypeTextView"
        app:layout_constraintStart_toEndOf="@+id/imgApp1" />
    <TextView
        android:id="@+id/bloodGroupTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Blood Group: AB+"
        android:textStyle="italic"
        android:textSize="0sp"
        app:layout_constraintTop_toBottomOf="@id/currentTimeTextView"
        app:layout_constraintStart_toEndOf="@+id/imgApp1" />
    <TextView
        android:id="@+id/quantificationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Quantification: Normal "
        android:textStyle="italic"
        android:textSize="0sp"
        app:layout_constraintTop_toBottomOf="@id/bloodGroupTextView"
        app:layout_constraintStart_toEndOf="@+id/imgApp1" />
    <TextView
        android:id="@+id/indexTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Index: 0.85 "
        android:textStyle="italic"
        android:textSize="0sp"
        app:layout_constraintTop_toBottomOf="@id/currentTimeTextView"
        app:layout_constraintStart_toEndOf="@+id/imgApp1" />
    <TextView
        android:id="@+id/totalAnalysisTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Total Analyst: Passed"
        android:textStyle="italic"
        android:textSize="0sp"
        app:layout_constraintTop_toBottomOf="@id/indexTextView"
        app:layout_constraintStart_toEndOf="@+id/imgApp1" />
    <TextView
        android:id="@+id/userIdTextView"
        android:layout_width="0dp"
        android:layout_height="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>